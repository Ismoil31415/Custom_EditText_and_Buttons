<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="top|center_horizontal"
                android:hint="Search here..."
                android:textSize="25sp"/>

            <EditText
                android:background="@drawable/edittext_bottom_border"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="top|center_horizontal"
                android:hint="Search here..."
                android:textSize="25sp"/>
            <EditText
                android:background="@drawable/edittext_border_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="top|center_horizontal"
                android:hint="Search here..."
                android:textSize="25sp"/>

            <EditText
                android:inputType="textPassword"
                android:background="@drawable/edittext_border_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="top|center_horizontal"
                android:hint="Search here..."
                android:textSize="25sp" />

            <EditText
                android:background="@drawable/edittext_rounded_corners_border"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="top|center_horizontal"
                android:hint="Search here..."
                android:textSize="25sp"
                android:searchHintIcon="@color/black"/>

            <SearchView
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edittext_rounded_corners_border2"
                android:hint="Search here..."
                android:layout_marginLeft="10dp">
            </SearchView>
            
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#833AB4"
                android:text="Click Me"
                android:backgroundTint="@null"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_gradient"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click Me"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_rounded"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click Me"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/button_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:text="Click Me"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical|center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_borders"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click Me"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_dashed"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click Me"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_gradient_rotate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Click Me"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|center_horizontal"/>

            
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>